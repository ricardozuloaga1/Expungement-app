{
  "version": 2,
  "buildCommand": "rm -rf node_modules package-lock.json && npm install && mkdir -p dist && npm run build:server",
  "outputDirectory": "public",
  "installCommand": "npm install --no-optional",
  "env": {
    "NODE_ENV": "production",
    "SKIP_INSTALL_SIMPLE_GIT_HOOKS": "true"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 