{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm ci --include=optional --no-fund --no-audit",
  "functions": {
    "api/*.js": {
      "includeFiles": "dist/**"
    }
  },
  "env": {
    "NODE_ENV": "production",
    "SKIP_INSTALL_SIMPLE_GIT_HOOKS": "true",
    "npm_config_fund": "false",
    "npm_config_audit": "false"
  },
  "rewrites": [
    {
      "source": "/api/debug",
      "destination": "/api/debug"
    },
    {
      "source": "/api/login",
      "destination": "/api/login"
    },
    {
      "source": "/api/test-auth",
      "destination": "/api/test-auth"
    },
    {
      "source": "/api/errors",
      "destination": "/api/errors"
    },
    {
      "source": "/api/questionnaire/user",
      "destination": "/api/questionnaire/user"
    },
    {
      "source": "/api/questionnaire/([^/]+)",
      "destination": "/api/questionnaire/$1"
    },
    {
      "source": "/api/questionnaire",
      "destination": "/api/questionnaire"
    },
    {
      "source": "/api/eligibility/user",
      "destination": "/api/eligibility/user"
    },
    {
      "source": "/api/eligibility",
      "destination": "/api/eligibility"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 