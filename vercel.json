{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm ci --no-optional --no-fund --no-audit || npm install --no-optional --no-fund --no-audit",
  "env": {
    "NODE_ENV": "production",
    "SKIP_INSTALL_SIMPLE_GIT_HOOKS": "true",
    "SKIP_ROLLUP_NATIVE": "true",
    "ROLLUP_NO_WASM": "true",
    "npm_config_optional": "false",
    "npm_config_fund": "false",
    "npm_config_audit": "false"
  },
  "functions": {
    "api/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 