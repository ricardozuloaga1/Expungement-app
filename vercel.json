{
  "version": 2,
  "buildCommand": "npm install --include=optional && npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm install",
  "env": {
    "NODE_ENV": "production",
    "SKIP_INSTALL_SIMPLE_GIT_HOOKS": "true"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 